{{!< default}} {{#post}} <!-- BLOG -->
    <section class="pt-20 overflow-hidden 2xl:pt-40">
        <div class="container px-4 mx-auto">
            <div class="relative w-full mb-24 overflow-hidden bg-fixed bg-center bg-no-repeat bg-cover h-96"
                style="height: 648px; background-image: url({{feature_image}});">
            </div>
            <div class="max-w-5xl mx-auto text-center">
                <span
                    class="text-xl font-bold text-transparent lg:text-2xl bg-clip-text bg-gradient-to-br from-yellow-200 to-orange-600">{{tags
                    from="1" to="1"}}</span>
                <h2 class="text-5xl font-bold text-gray-800 mt-7 mb-14 font-heading">{{title}}</h2>
                <div class="mx-auto my-4 text-center">{{date format="DD-MM-YYYY"}} / {{reading_time minute="1 min.
                    czytania" minutes="% minuty czytania" }}</div>
                {{#if custom_excerpt}}
                <p class="max-w-2xl pb-12 mx-auto mb-12 overflow-auto text-xl border-b border-gray-200">
                    {{custom_excerpt}}</p>
                {{/if}}
                <div class="max-w-4xl mx-auto prose text-left text-gray-600 md:leading-normal md:text-2xl">
                    <p class="">{{content}}</p>
                </div>
            </div>
        </div>
    </section>
    <!-- CTA -->
    <div class="px-8 py-8 mx-auto sm:py-10 lg:py-20 max-w-7xl">
        <div class="relative py-6 overflow-hidden bg-gray-50 lg:py-12 md:px-6 lg:p-16 lg:flex lg:items-center lg:justify-between md:bg-purple-1000"
            data-primary="purple-600" data-rounded="rounded-lg" data-rounded-max="rounded-full">
            <div class="relative p-6 rounded-lg md:p-0 md:pb-4">
                <h2 class="text-3xl font-extrabold leading-9 tracking-tight sm:text-4xl sm:leading-10">Zamów beton</h2>
                <p class="w-full mt-5 text-base leading-6 text-gray-500 md:w-3/4" data-primary="pink-600">Z
                    przyjemnością odpowiemy na wszelkie pytania dotyczące naszej oferty.</p>
            </div>
            <div
                class="relative flex flex-col items-center w-full px-6 space-y-5 md:space-x-5 md:space-y-0 md:flex-row md:w-auto lg:flex-shrink-0 md:px-0">
                <a class="relative z-20 inline-block px-8 py-3 mb-3 leading-loose text-white transition duration-200 bg-yellow-500 shadow-2xl lg:mb-0 lg:mr-3 lg:w-auto bg-secondary hover:bg-black"
                    href="#_">Zamów beton</a>
                <a href="#_" class="text-white">Try it free</a>
            </div>
        </div>
    </div>
    </div>
    {{/post}}