{{!< default}} {{#post}} <!-- BLOG -->
    <section class="pt-20 overflow-hidden">
        <div class="container px-4 mx-auto place-items-center place-content-center">
            <div class="text-center">
                <span
                    class="text-xl text-center  text-transparent lg:text-2xl bg-clip-text bg-gradient-to-br from-yellow-200 to-secondary">{{tags
                    from="1" to="1"}}</span>
                <h2 class="text-5xl mx-auto max-w-3xl  text-gray-800 mt-7 mb-14 font-heading">{{title}}</h2>
                <div class="mx-auto my-4 text-center">{{date format="DD-MM-YYYY"}} / {{reading_time minute="1 min.
                    czytania" minutes="% minuty czytania" }}</div>
                {{#if custom_excerpt}}
                <p class="max-w-2xl mx-auto overflow-auto">
                    {{custom_excerpt}}</p>
                {{/if}}
            </div>
            <div class="max-w-4xl mx-auto mt-8">
            <img
                src="{{feature_image}}"
                alt={{title}}
                loading="lazy"
                class="relative z-20 object-cover object-center w-full h-96"
            />
            </div>
        </div>
    </section>
    {{!-- CONTENT --}}
    <section class="max-w-4xl pt-12 text-xl text-gray-700 prose leading-relaxed container px-8 mx-auto">
        <div class="">
            {{content}}
        </div>
    </section>
    <!-- CTA -->
    <div class="px-8 py-8 mx-auto sm:py-10 lg:py-20 max-w-7xl">
        <div class="relative py-6 overflow-hidden bg-gray-50 lg:py-12 md:px-6 lg:p-16 lg:flex lg:items-center lg:justify-between md:bg-purple-1000"
            data-primary="purple-600" data-rounded="rounded-lg" data-rounded-max="rounded-full">
            <div class="relative p-6 rounded-lg md:p-0 md:pb-4">
                <h2 class="text-3xl  leading-9 tracking-tight sm:leading-10">Zamów beton</h2>
                <p class="w-full mt-5 text-base leading-6 text-gray-500 md:w-3/4" data-primary="pink-600">Z
                    przyjemnością odpowiemy na wszelkie pytania dotyczące naszej oferty.</p>
            </div>
            <div
                class="relative flex flex-col items-center w-full px-6 space-y-5 md:space-x-5 md:space-y-0 md:flex-row md:w-auto lg:flex-shrink-0 md:px-0">
                <a class="relative z-20 inline-block px-8 py-3 mb-3 leading-loose text-white transition duration-200 shadow-2xl lg:mb-0 lg:mr-3 lg:w-auto bg-secondary hover:bg-black"
                    href="/kontakt/">Zamów beton</a>
                {{!-- <a href="#_" class="text-white">Zamów beton</a> --}}
            </div>
        </div>
    </div>
    </div>
    {{/post}}