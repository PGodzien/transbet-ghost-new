{{#is "page"}}
    <div class="space-y-4 group">
        <img
            src="{{feature_image}}"
            alt="cover"
            loading="lazy"
            class="relative object-cover object-top w-full h-96"
        />
        <div class="space-y-2">
            <div class="space-y-4">
                <h4 class="text-2xl font-semibold text-gray-700"><a
                        href="{{url}}"
                        class=""
                    >{{title}}</a></h4>
                {{#if custom_excerpt}}
                    <p class="text-gray-600 line-clamp-3">{{custom_excerpt}}</p>
                {{/if}}
            </div>
        </div>

        <a
            href="{{url}}"
            x-data="{ hover: false }"
            @mouseenter="hover = true"
            @mouseleave="hover = false"
            class="relative inline-block mt-4 text-base transition duration-150 ease hover:text-secondary"
        >
            <span class="block mb-1">Czytaj więcej</span>
            <span
                class="absolute bottom-0 left-0 inline-block w-full h-1 -mb-1 overflow-hidden"
            >
                <span
                    class="absolute inset-0 inline-block w-full h-full transform translate-x-0 border-t border-black"
                ></span>
            </span>
            <span
                class="absolute bottom-0 left-0 inline-block w-full -mb-1 overflow-hidden"
            >
                <span
                    x-show="hover"
                    class="absolute inset-0 inline-block w-full h-full transform border-t border-secondary"
                    x-transition:enter="transition ease-out duration-300"
                    x-transition:enter-start="-translate-x-full"
                    x-transition:enter-end="translate-x-0"
                    x-transition:leave="transition ease-out duration-300"
                    x-transition:leave-start="translate-x-0"
                    x-transition:leave-end="translate-x-full"
                    data-primary="secondary"
                    style="display: none;"
                ></span>
            </span>
        </a>
    </div>
