{{!< default}}
{{#post}}

    <div class="relative">

        <img
            class="absolute inset-0 object-cover object-center w-full h-full"
            src="{{feature_image}}"
            alt=""
        />
        <div
            aria-hidden="true"
            class="absolute inset-0 w-full h-full bg-gradient-to-r from-black via-primary to-transparent opacity-80"
        ></div>
        <div class="container relative px-6 m-auto md:px-12 lg:px-6">
            <div
                class="py-40 mb-12 space-y-16 md:mb-20 md:py-56 lg:w-8/12 lg:mx-auto"
            >
                <h1
                    class="text-3xl font-bold text-white sm:text-4xl md:text-5xl"
                >
                    {{title}}
                </h1>
                {{#if custom_excerpt}}<p
                        class="text-lg text-white md:text-xl"
                    >{{custom_excerpt}}</p>{{/if}}
                <div class="md:flex items-center md:space-x-5 text-white">
                    <p class="">Dla kogo: <br class="md:hidden">
                        <span
                            class="text-xl font-bold transition duration-200 lg:ml-2 hover:text-white text-secondary"
                        >{{tags from="2" to="2"}}</span></p>
                    <p class="hidden md:block">|</p>
                    <p class="">Rodzaj działań: <br class="md:hidden">
                        <span
                            class="text-xl font-bold transition duration-200 lg:ml-2 hover:text-white text-secondary"
                        >{{tags from="3" to="3"}}</span></p>
                </div>
            </div>
        </div>

    </div>
    <div class="">
        <section class="pb-16 bg-white background-position: center top;">
            <div class="mx-auto">
                <div
                    class="px-4 mx-auto mb-8 text-lg font-medium leading-loose prose text-gray-500 md:max-w-5xl md:text-xl"
                >
                    {{content}}
                </div>
            </div>
        </section>
    </div>
{{/post}}